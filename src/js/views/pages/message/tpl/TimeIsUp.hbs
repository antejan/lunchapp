<div class="message">
    <i class="message-badge message-badge-bad"></i>
    <h2>Time's up!</h2>
    {{#if message}}
    <div class="message-subtitle">{{message}}</div>
    {{/if}}
    <p><button class="btn btn-L"><span class="btn-filler fillWidth"></span><span class="btn-label">{{#if button}}{{button}}{{else}}Next{{/if}}</span></button></p>
</div>
