<div class="list-item-rating">
    <div class="list-item-name">
        {{#if meal}}
            {{meal}} <small class="name">({{proposer}})</small>
        {{else}}
            {{name}}
        {{/if}}
    </div>
    {{#if url}}<a target="_blank" href="{{url}}" class="list-item-link fa fa-cutlery"></a>{{/if}}
    {{#if recipe-url}}<a target="_blank" href="{{recipe-url}}" class="list-item-link fa fa-cutlery"></a>{{/if}}

    <ul class="rating">
        <li class="rating-item"><label><input type="radio" name="rating-{{id}}" value="3"/></label></li>
        <li class="rating-item"><label><input type="radio" name="rating-{{id}}" value="2"/></label></li>
        <li class="rating-item"><label><input type="radio" name="rating-{{id}}" value="1"/></label></li>
        <li class="rating-item rating-item-negative"><label><input type="radio" name="rating-{{id}}" value="-1"/></label></li>
    </ul>
</div>
